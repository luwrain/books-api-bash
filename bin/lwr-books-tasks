. lwr-books-init

if [ "$1" == '--help' ]; then
cat <<EOF
$THIS: Printing the list of tasks
Usage:
  $THIS

Prints the current tasks of the user. 
EOF
    exit 0
fi

check_atoken

exec curl -s -X GET --get --data-urlencode "atoken=$ATOKEN" $BASE_URL/tasks/list/
